<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloWorld</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="http://127.0.0.1*"/> <!-- allow local pages -->
    <access origin="http://10.10.1.129*"/>
    <access origin="http://10.1.144.91*" subdomains="true"/>
    <access origin="http://aubreynickerson.com*" subdomains="true"/>
    <access origin="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="./www/img/zublin-sized.png" density="land-hdpi"/>
        <splash src="./www/img/zublin-sized.png" density="land-ldpi"/>
        <splash src="./www/img/zublin-sized.png" density="land-mdpi"/>
        <splash src="./www/img/zublin-sized.png" density="land-xhdpi"/>
        <splash src="./www/img/zublin-sized.png" density="land-xxhdpi"/>

        <splash src="./www/img/zublin-sized.png" density="port-hdpi"/>
        <splash src="./www/img/zublin-sized.png" density="port-ldpi"/>
        <splash src="./www/img/zublin-sized.png" density="port-mdpi"/>
        <splash src="./www/img/zublin-sized.png" density="port-xhdpi"/>
        <splash src="./www/img/zublin-sized.png" density="port-xxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
